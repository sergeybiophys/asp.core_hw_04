
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyASP.Core.View</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />


</head>
<body style="width: 100%; background-color: orangered;">
    <header style="justify-content: center;">
        <nav class="navbar navbar-light bg-light" style="justify-content: center;">
            <div>
                <a class="navbar-brand" href="#">
                    crosses and zeros Game))))
                </a>
            </div>


        </nav>
        <div style="background-color: burlywood;">
            <label>Number of users on the network : </label>
            <input id="count" readonly="readonly" style="margin-left: 50px; width: 50px; background-color: orange;" name="count" value="0" />
        </div>
        <div style="background-color: brown;">
            <label>Number of registered users : </label>
            <input id="registered" readonly="readonly" style="margin-left: 50px; width: 50px; background-color: lightgreen;" name="count" value="0" />
        </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()

        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MyASP.Core.View - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/game.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
